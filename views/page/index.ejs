<%- include('../partials/header'); -%>

<section id="mainPage">
  <div class="shape tLCircle"></div>
  <div class="shape brCircle"></div>
  <div class="glassCard">
    
    <div class="slideshow-container">

      <div class="mySlides slide_container">
        <div class="numbertext">1 / 3</div>
        <div class="input_container">
          <input type="text" name="inputName" placeholder="write your name here...">
          <input type="text" name="inputEmail" placeholder="write your mail here...">
        </div>
        <div class="text">Caption Text</div>
      </div>
      
      <div class="mySlides slide_container">
        <div class="numbertext">2 / 3</div>
        <div class="input_container">
          <select name="lessons" id="cars">
            <option value="solo">private class</option>
            <option value="group">group </option>
            <option value="online">online lessons</option>
            <option value="dance">skate dance</option>
          </select>
        </div>
        <div class="text">Caption Two</div>
      </div>
      
      <div class="mySlides slide_container">
        <div class="numbertext">3 / 3</div>
        <div class="input_container">
          <input type="radio" id="html" name="fav_language" value="HTML">
          <label for="html">HTML</label><br>
          <input type="radio" id="css" name="fav_language" value="CSS">
          <label for="css">CSS</label><br>
          <input type="radio" id="javascript" name="fav_language" value="JavaScript">
          <label for="javascript">JavaScript</label> 
          <br>
          <input type="checkbox" id="vehicle1" name="vehicle1" value="Bike">
          <label for="vehicle1"> I have a bike</label><br>
          <input type="checkbox" id="vehicle2" name="vehicle2" value="Car">
          <label for="vehicle2"> I have a car</label><br>
          <input type="checkbox" id="vehicle3" name="vehicle3" value="Boat">
          <label for="vehicle3"> I have a boat</label><br> 
        </div>
        <div class="text">
          <button class="send_mail">Register</button>
        </div>
      </div>
      
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
      
      </div>

  </div>
</section>
    
<%- include('../partials/footer'); -%>
